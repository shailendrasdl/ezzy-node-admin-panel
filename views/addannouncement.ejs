	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Announcement Add</li>
			</ol>

			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Add Announcement details</h3> 
						</div>							
						<form action="/addannouncement" method="post">
							<div class="box-body">
								<div class="row">	
									<div class="form-group col-md-6">
										<label>Title<span class="text-danger">*</span></label>
										<input type="text" name="title" required id="title" required class="form-control">
									</div>
									<div class="form-group col-md-6">
										<label>Categories<span class="text-danger">*</span></label><br>
										<select name="category" class="form-control">
											<%
												if(category_result.length > 0)
												{
													for(var i=0; i< category_result.length; i++)
													{
														%>
															<option value="<%= category_result[i].name %>"><%= category_result[i].name %></option>
														<%
													}
												}
												else
												{
													%>
														<option value=""> No option found </option>
													<%
												}
											%>
										</select>
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-6">
										<label>Start date<span class="text-danger">*</span></label>
										<input type="text" name="start_date" required id="start_date" required class="form-control" autocomplete="off">
									</div>
									<div class="form-group col-md-6">
										<label>End date<span class="text-danger">*</span></label>
										<input type="text" name="end_date" required id="end_date" required class="form-control" autocomplete="off">
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-12">
										<label>Description</label>
										<textarea name="description" class="form-control"></textarea>
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
											<a href="/announcement" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
	<% include templates/footer.ejs %>
	<!--// -->           